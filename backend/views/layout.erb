	<body>
		<% unless request.fullpath === "/signup" ||  request.fullpath ===  "/signin" %>
			<header>
				<nav class="center-horizontal">
					<a id='logo' href='/'>
						<img src="/assets/img/logo.png" alt="user_image"/>
