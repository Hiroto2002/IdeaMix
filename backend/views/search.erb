	<section class="center-vertical">
		<h1>検索フォーム</h1>
		
		<form action="/search" method="get">
			<input type="text" name="keyword" placeholder="キーワード">
			<input type="submit" value="検索">
		</form>
		
		<h2>検索結果</h2>
	
		<% unless @musics.to_s.empty? %>
			<div class="center-horizontal">
				<% @musics.each do |music|%>
					<div class="post center-vertical">
						<img src="<%=music["artworkUrl100"]%>">
						<p>アーティスト: <%=music["artistName"]%></p>
						<p>アルバム: <%=music["collectionName"]%></p>
						<p>曲名: <%=music["trackName"]%></p>
						<p><a href="<%=music["previewUrl"]%>">サンプル</a></p>
						<form action="/post" method="post">
							<input type="hidden" value="<%=music["artistName"]%>" name="artistName">
							<input type="hidden" value="<%=music["collectionName"]%>" name="collectionName">
							<input type="hidden" value="<%=music["trackName"]%>" name="trackName">
							<input type="hidden" value="<%=music["artworkUrl100"]%>" name="artworkUrl100">
							<input type="hidden" value="<%=music["previewUrl"]%>" name="previewUrl">
							<input type="text" name="comment" placeholder="コメント">
							<input type="submit" value="投稿">
						</form>
					</div>
				<% end %>
			</div>
		<% else %>
			<p>検索結果がありません</p>
		<% end %>
	</section>

